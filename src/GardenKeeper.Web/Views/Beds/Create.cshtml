@model GardenKeeper.Application.ViewModels.CreateBedViewModel
@{
    ViewData["Title"] = "Create Garden Bed";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">My Beds</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">New Garden Bed</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Back Yard Raised Bed" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label asp-for="WidthFeet" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="WidthFeet" class="form-control" type="number" min="1" max="50" />
                                <span class="input-group-text">ft</span>
                            </div>
                            <span asp-validation-for="WidthFeet" class="text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="LengthFeet" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="LengthFeet" class="form-control" type="number" min="1" max="100" />
                                <span class="input-group-text">ft</span>
                            </div>
                            <span asp-validation-for="LengthFeet" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="alert alert-info small">
                        <strong>Tip:</strong> A standard raised bed is 4 ft Ã— 8 ft (32 sq ft). Each cell in the grid
                        represents 1 square foot.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success flex-fill">Create Bed</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
